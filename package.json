{
  "name": "Whatsaly",
  "version": "1.0.0",
  "description": "A full WhatsApp runtime with backend service and web dashboard",
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "latest",
    "@types/ws": "^8.18.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "prettier": "3.7.4",
    "typescript-eslint": "^8.50.1"
  },
  "peerDependencies": {
    "typescript": "latest"
  },
  "scripts": {
    "start": "concurrently --kill-others \"bun run server\" \"bun run web\"",
    "server": "bun run ./server.ts",
    "web": "cd service && node ./dist/server/entry.mjs",
    "web:dev": "cd service && npx astro dev",
    "web:build": "cd service && npx astro build",
    "dev": "concurrently --kill-others \"bun run server\" \"bun run web:dev\"",
    "postinstall": "bun run hooks.ts",
    "lint": "eslint . --ext .ts --fix",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@realastrox11/bunql": "^1.2.0",
    "audio-decode": "^2.2.3",
    "baileys": "https://github.com/WhiskeySockets/Baileys",
    "libphonenumber-js": "^1.12.33",
    "pino-pretty": "^13.1.3"
  }
}
