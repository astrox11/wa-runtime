{
  "name": "whatsaly",
  "version": "0.0.1",
  "description": "A full WhatsApp runtime with backend service and web dashboard",
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "latest",
    "@types/ws": "^8.18.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "prettier": "3.7.4",
    "typescript-eslint": "^8.51.0"
  },
  "peerDependencies": {
    "typescript": "latest"
  },
  "scripts": {
    "start": "bun run server.ts",
    "dev": "concurrently --kill-others \"bun run server.ts\" \"bun run web:dev\"",
    "web:dev": "cd service && npx astro dev --port 4321",
    "build": "cd service && npx astro build",
    "postinstall": "bun run hooks/index.ts",
    "lint": "eslint . --ext .ts --fix",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@realastrox11/bunql": "^1.2.0",
    "audio-decode": "^2.2.3",
    "baileys": "https://github.com/WhiskeySockets/Baileys",
    "libphonenumber-js": "^1.12.33",
    "pino-pretty": "^13.1.3"
  }
}
